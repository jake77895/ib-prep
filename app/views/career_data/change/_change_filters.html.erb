<div class="accordion shadow-sm my-4" id="filtersAccordion">
  <div class="accordion-item">
    <h2 class="accordion-header" id="filtersHeading">
      <button
        class="accordion-button collapsed"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#filtersCollapse"
        aria-expanded="false"
        aria-controls="filtersCollapse"
      >
        Filters
      </button>
    </h2>
    <div
      id="filtersCollapse"
      class="accordion-collapse collapse"
      aria-labelledby="filtersHeading"
      data-bs-parent="#filtersAccordion"
    >
      <div class="accordion-body">
        <div class="row">
          <!-- From Column -->
          <div class="col-md-6">
            <h6 class="fw-bold text-start mb-3">From</h6>
            <hr />
            <div class="mb-3">
              <select id="fromIndustry" class="form-select">
                <option selected>Select Industry</option>
                <option value="1">Technology</option>
                <option value="2">Finance</option>
                <option value="3">Healthcare</option>
                <option value="4">Consulting</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="fromCompany" class="form-select">
                <option selected>Select Company</option>
                <option value="1">Company A</option>
                <option value="2">Company B</option>
                <option value="3">Company C</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="fromLevel" class="form-select">
                <option selected>Select Level</option>
                <option value="1">Analyst</option>
                <option value="2">Associate</option>
                <option value="3">Manager</option>
                <option value="4">Director</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="fromSubLevel" class="form-select">
                <option selected>Select Sub-Level</option>
                <option value="1">Junior</option>
                <option value="2">Mid</option>
                <option value="3">Senior</option>
              </select>
            </div>
          </div>

          <!-- To Column -->
          <div class="col-md-6">
            <h6 class="fw-bold text-start mb-3">To</h6>
            <hr />
            <div class="mb-3">
              <select id="toIndustry" class="form-select">
                <option selected>Select Industry</option>
                <option value="1">Technology</option>
                <option value="2">Finance</option>
                <option value="3">Healthcare</option>
                <option value="4">Consulting</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="toCompany" class="form-select">
                <option selected>Select Company</option>
                <option value="1">Company A</option>
                <option value="2">Company B</option>
                <option value="3">Company C</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="toLevel" class="form-select">
                <option selected>Select Level</option>
                <option value="1">Analyst</option>
                <option value="2">Associate</option>
                <option value="3">Manager</option>
                <option value="4">Director</option>
              </select>
            </div>
            <div class="mb-3">
              <select id="toSubLevel" class="form-select">
                <option selected>Select Sub-Level</option>
                <option value="1">Junior</option>
                <option value="2">Mid</option>
                <option value="3">Senior</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Buttons -->
        <div class="text-center mt-4 d-flex justify-content-between">
          <button class="btn btn-dark w-50 ms-2 me-2">Apply Filters</button>
          <button class="btn btn-outline-dark w-50 me-2">Clear Filters</button>
        </div>
      </div>
    </div>
  </div>
</div>
