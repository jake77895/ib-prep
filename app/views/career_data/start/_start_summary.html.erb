<div class="row">
  <!-- First Box: Most Common Industries -->
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5 class="fw-bold text-center mb-3">Most Common Industries</h5>
        <div class="d-flex flex-column">
          <% 10.times do %> <!-- Placeholder data -->
            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
              <div>
                <h6 class="fw-bold mb-1">Industry <%= rand(1..10) %></h6>
                <small class="text-muted"># Records: <%= rand(100..500) %></small>
              </div>
              <div class="text-end">
                <small>Avg Salary: $<%= rand(60..120) %>K</small><br>
                <small>Avg Bonus: $<%= rand(10..50) %>K</small><br>
                <small>Avg Hours: <%= rand(35..70) %> hrs/week</small><br>
                <small>Avg Comp/Hour: $<%= rand(20..50) %>/hour</small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Second Box: Most Common Companies -->
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5 class="fw-bold text-center mb-3">Most Common Companies</h5>
        <div class="d-flex flex-column">
          <% 10.times do %> <!-- Placeholder data -->
            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
              <div>
                <h6 class="fw-bold mb-1">Company <%= ["A", "B", "C", "D", "E"].sample %></h6>
                <small class="text-muted"># Records: <%= rand(100..500) %></small>
              </div>
              <div class="text-end">
                <small>Avg Salary: $<%= rand(60..120) %>K</small><br>
                <small>Avg Bonus: $<%= rand(10..50) %>K</small><br>
                <small>Avg Hours: <%= rand(35..70) %> hrs/week</small><br>
                <small>Avg Comp/Hour: $<%= rand(20..50) %>/hour</small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
