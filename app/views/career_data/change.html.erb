<div class="mb-4 mt-4 px-4">
  <div class="card shadow-sm position-relative">
    <!-- Back Button -->
    <%= link_to career_datum_path(id: 1), class: 'btn btn-light rounded-circle shadow-sm d-flex align-items-center justify-content-center position-absolute', style: 'width: 40px; height: 40px; top: 10px; left: 10px;' do %>
      <span class="fs-6">&larr;</span>
    <% end %>

    <!-- Title and Description -->
    <div class="card-body text-center bg-light">
      <h1 class="fw-bold text-uppercase" style="letter-spacing: 1px; margin-bottom: 10px; margin-top: 10px;">Career Change</h1>
      <p class="text-muted" style="font-size: 14px;">See career changes</p>
    </div>
  </div>
</div>

<div class="px-4">
  <%= render 'career_data/change/change_summary' %>
</div>

<div class="px-4">
  <%= render 'career_data/change/change_filters' %>
</div>

<div class="d-flex px-4 mb-3">
  <div class="row w-100">
    <div class="col-4">
      <%= link_to "Change", change_career_data_path(partial: "change_difference_table"), 
            class: "btn #{params[:partial] == 'change_difference_table' || params[:partial].nil? ? 'btn-dark' : 'btn-outline-dark'} w-100" %>
    </div>
    <div class="col-4">
      <%= link_to "From", change_career_data_path(partial: "change_from_table"), 
            class: "btn #{params[:partial] == 'change_from_table' ? 'btn-dark' : 'btn-outline-dark'} w-100" %>
    </div>
    <div class="col-4">
      <%= link_to "To", change_career_data_path(partial: "change_to_table"), 
            class: "btn #{params[:partial] == 'change_to_table' ? 'btn-dark' : 'btn-outline-dark'} w-100" %>
    </div>
  </div>
</div>

<div class="px-4">
  <%= render "career_data/change/#{@partial || 'change_from_table'}" %>
</div>
