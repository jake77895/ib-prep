<!-- Hero Section -->
<section class="text-white text-center d-flex align-items-center justify-content-center" 
  style="
    position: relative; 
    background-color: #F5F5F5; /* Light gray background */
    height: 70vh;
    overflow: hidden;
  ">
  
  <!-- Background Design Layer -->
  <div style="
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #B1C5DB; 
    z-index: 0;
  "></div>

  <!-- Background Image Layer -->
  <div style="
    position: absolute;
    top: 50%;
    top: 50%;
    right: 0;
    left: auto;
    transform: translateY(-50%);
    width: 80%;
    height: 90%;
    background: url('<%= asset_path('hero-bg.png') %>') no-repeat center center / contain;
    z-index: 1;
    opacity: 0.9;
  "></div>

  <!-- Foreground Content -->
<div class="container text-start" style="z-index: 2; position: relative;">
  <h1 class="fw-bold" 
      style="font-size: clamp(1.5rem, 5vw, 3rem);">
    Welcome to Our Site!
  </h1>
  <p class="lead" 
     style="font-size: clamp(1rem, 2.5vw, 1.25rem);">
    Discover, connect, and explore what we have to offer.
  </p>
  <a href="#" class="btn btn-light btn-lg mt-3">Learn More</a>
</div>

</section>


