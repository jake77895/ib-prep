<div class="mt-2">
  <% if @top_posts.present? %>
    <ul class="list-group" style="font-size: 0.8rem;">
      <% @top_posts.each_with_index do |post, index| %>
        <li 
          class="d-flex justify-content-between align-items-center py-2 pl-0" 
          style="border-bottom: 1px solid #e9ecef; <%='border: none;' if index == @top_posts.size - 1 %>">
          <!-- Left Section: Pill Badge and Post Title -->
          <div class="d-flex align-items-center mb-1">
            <!-- Comments Count Pill -->
            <span 
              class="badge rounded-pill bg-light text-secondary border border-secondary me-2" 
              style="width: 50px; text-align: center; padding: 0.2rem;">
              <%= post.comments_count %>
            </span>
            <!-- Post Title -->
            <strong>
              <%= link_to truncate(post.title, length: 40), forum_room_post_path(post.forum_room, post), class: 'text-dark ms-2', style: 'text-decoration: none; font-weight: normal;' %>
            </strong>
          </div>

          <!-- Right Section: Time Ago -->
          <div class="text-muted" style="font-size: 0.8rem;">
            <%= time_ago_in_words(post.created_at) %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted" style="font-size: 0.8rem;"></p>
  <% end %>
</div>
