<h2 class="text-center mb-4 mt-4">Sign Up</h2>

<div class="container d-flex justify-content-center">
  <div class="card shadow-lg p-4 w-100" style="max-width: 500px;">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <!-- Username Field -->
      <div class="form-group mb-3">
        <%= f.input :user_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Username",
                    input_html: { class: 'form-control' } %>
      </div>

      <!-- Email Field (Optional) -->
      <div class="form-group mb-3">
        <%= f.input :email,
                    required: false,
                    label: false,
                    placeholder: "Email (optional - needed for password reset)",
                    input_html: { autocomplete: "email", class: 'form-control' } %>
      </div>

      <!-- Password Field -->
      <div class="form-group mb-3">
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: "Password",
                    input_html: { autocomplete: "new-password", class: 'form-control' } %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="form-group mb-4">
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: "Confirm Password",
                    input_html: { autocomplete: "new-password", class: 'form-control' } %>
      </div>

      <!-- Submit Button -->
      <div class="form-actions text-center">
        <%= f.button :submit, "Sign Up", class: "btn btn-dark w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
