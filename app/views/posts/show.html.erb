<div class="container my-4">
  <!-- Forum Room Name, Time, and User -->
  <div class="d-flex justify-content-between align-items-center">
    <span class="text-primary fw-bold"><%= @post.forum_room.name %></span>
    <span class="text-muted small">
      Posted by <%= @post.user.user_name %> â€¢ <%= time_ago_in_words(@post.created_at) %> ago
    </span>
  </div>

  <!-- Post Title -->
  <h1 class="mt-3 mb-4"><%= @post.title %></h1>

  <!-- Post Content -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <p class="mb-0"><%= @post.body %></p>
    </div>
  </div>

  <!-- Comments Section -->
  <%= render 'forum_comments' %>
</div>
