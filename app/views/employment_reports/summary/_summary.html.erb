<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ibOnlyToggle = document.getElementById('ibOnlyToggle');
    const employersList = document.getElementById('employersList');
    
    const allEmployers = [
      { name: 'Goldman Sachs', count: 45, percent: 6, isIB: true },
      { name: 'McKinsey', count: 42, percent: 5, isIB: false },
      { name: 'Morgan Stanley', count: 38, percent: 5, isIB: true },
      { name: 'JPMorgan', count: 35, percent: 4, isIB: true },
      { name: 'Bain', count: 32, percent: 4, isIB: false }
    ];

    const ibEmployers = [
      { name: 'Goldman Sachs', count: 45, percent: 6, isIB: true },
      { name: 'Morgan Stanley', count: 38, percent: 5, isIB: true },
      { name: 'JPMorgan', count: 35, percent: 4, isIB: true },
      { name: 'Bank of America', count: 30, percent: 4, isIB: true },
      { name: 'Citi', count: 28, percent: 3, isIB: true }
    ];

    function updateEmployersList(employers) {
      employersList.innerHTML = employers.map(employer => `
        <div class="list-group-item d-flex justify-content-between align-items-center">
          ${employer.name}
          <span class="text-muted">
            <strong>${employer.count}</strong> (${employer.percent}%)
          </span>
        </div>
      `).join('');
    }

    ibOnlyToggle.addEventListener('change', function() {
      updateEmployersList(this.checked ? ibEmployers : allEmployers);
    });
  });
</script> 
