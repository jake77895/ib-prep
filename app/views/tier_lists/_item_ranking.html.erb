<!-- Item Ranking Partial -->
<div class="container mt-4 mb-4">
  <div class="card shadow-sm border rounded p-3">
    <div class="card-header bg-dark text-white rounded-top">
      <h5 class="mb-0 text-center">Rank Item</h5>
    </div>
    
    <div class="card-body text-center">
      <!-- Item Image -->
      <div class="mb-3">
        <%= image_tag "https://via.placeholder.com/300x200", 
                      alt: "Item Image", 
                      class: "img-fluid rounded shadow-sm border", 
                      style: "max-width: 300px; max-height: 200px; object-fit: cover;" %>
      </div>
      
      <!-- Item Name -->
      <h5 class="fw-bold mb-3">Item Name Placeholder</h5>
      
      <!-- Ranking Options with Border -->
      <div class="mb-4 border rounded p-3 shadow-sm">
        <h6 class="text-center fw-bold mb-3">Select Item Rank</h6>
        <div class="d-flex justify-content-center gap-3">
          <% ["S", "A", "B", "C", "D", "F"].each do |rank| %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="item_rank" id="rank_<%= rank %>" value="<%= rank %>">
              <label class="form-check-label fw-bold" for="rank_<%= rank %>">
                <%= rank %>
              </label>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Navigation Buttons -->
      <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-outline-secondary px-4">Previous</button>
        <button class="btn btn-outline-secondary px-4">Next</button>
      </div>
    </div>
  </div>
</div>
