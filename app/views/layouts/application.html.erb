<!DOCTYPE html>
<html>
  <head>
    <title>TopBucket</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!--     Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--     Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Favicon -->
    <link rel="icon" href="<%= asset_path('custom_icons/top_bucket_favicon-16x16.png') %>" type="image/png">

  </head>

  <body>

    <!--  Notices and alerts-->
    <% if notice.present? %>
      <div class="alert alert-light mb-0" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="alert alert-warning mb-0" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg mt-0" style="background-color: #0D1B2A; width: 100vw; margin: 0; padding: 0 10px;">
      <div class="container-fluid d-flex align-items-center justify-content-between" style="padding-top: 0.25rem; padding-bottom: 0.25rem;">
        <!-- Logo -->
        <div class="d-flex align-items-center">
          <%= link_to root_path, class: 'navbar-brand d-flex align-items-center' do %>
            <%= image_tag 'logo/logo-white.png', 
          alt: 'Site Logo', 
          class: 'd-inline-block align-top', 
          style: 'height: 25px; width: auto; object-fit: contain; margin-top: -50px; margin-bottom: -45px;' %>
          <% end %>
        </div>

        <!-- Navigation Links and Profile -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-3">
            <li class="nav-item">
              <%= link_to 'Overview', about_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Contact', contact_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Shop', 'https://shop.thetopbucket.com/', class: 'nav-link text-white', target: '_blank', rel: 'noopener noreferrer' %>
            </li>
          </ul>

          <ul class="navbar-nav ms-auto align-items-center">
            <% if user_signed_in? %>
              <!-- Dropdown for Profile and Admin -->
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle text-white" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Profile
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'dropdown-item' %>
                  </li>
                  <% if current_user.admin? %>
                    <li>
                      <%= link_to 'Admin Dashboard', admin_dashboard_path, class: 'dropdown-item text-warning' %>
                    </li>
                  <% end %>
                  <li>
                    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item text-danger' %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-outline-light me-2' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-light' %>
              </li>
            <% end %>
          </ul>
        </div>

        <!-- Toggler Button for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
