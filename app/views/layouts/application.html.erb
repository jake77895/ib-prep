<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!--     Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--     Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  </head>

  <body>

    <!--  Notices and alerts-->
    <% if notice.present? %>
      <div class="alert alert-light" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="alert alert-warning" role="alert">
        <%= alert %>
      </div>
    <% end %>
    

    <nav class="navbar navbar-expand-lg" style="background-color: #0D1B2A;">
      <div class="container d-flex align-items-center justify-content-between" style="padding-top: 0.25rem; padding-bottom: 0.25rem;">
        
        <!-- Logo -->
        <div class="d-flex align-items-center">
          <%= link_to root_path, class: 'navbar-brand d-flex align-items-center' do %>
            <%= image_tag 'logo/logo-white.png', 
              alt: 'Site Logo', 
              class: 'd-inline-block align-top', 
              style: 'height: 150px; width: auto; object-fit: contain; margin-top: -50px; margin-bottom: -50px;' %>
          <% end %>
          
          <!-- About and Contact Links -->
          <ul class="navbar-nav ms-3">
            <li class="nav-item">
              <%= link_to 'About', about_path, class: 'nav-link', style: 'color: white;' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Contact', contact_path, class: 'nav-link', style: 'color: white;' %>
            </li>
          </ul>
        </div>

        <!-- Toggler Button for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- User Authentication Links -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <% if user_signed_in? %>
            <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light me-2' %>
            <a href="<%= edit_user_registration_path %>" class="btn btn btn-light">Profile</a>
          <% else %>
            <a href="<%= new_user_session_path %>" class="btn btn-outline-light me-2">Sign in</a>
            <a href="<%= new_user_registration_path %>" class="btn btn-light">Sign up</a>
          <% end %>
        </div>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
