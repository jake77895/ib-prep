<div class="modal fade" id="flagEmployeeModal-<%= employee.id %>" tabindex="-1" aria-labelledby="flagEmployeeModalLabel-<%= employee.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="flagEmployeeModalLabel-<%= employee.id %>">Flag Employee</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: flag_employee_employee_view_path(@employee_view, employee_id: employee.id), method: :post, local: true, scope: :flag do |f| %>
  <!-- Dropdown for Predefined Reasons -->
  <div class="mb-3">
    <%= f.label :reason, "Reason for Flagging", class: "form-label" %>
    <%= f.select :reason, options_for_select([
      "Incorrect Company",
      "Inaccurate Information",
      "Duplicate Entry",
      "Other"
    ]), { prompt: "Select a reason" }, class: "form-select" %>
  </div>

  <!-- Text Area for Additional Details -->
  <div class="mb-3">
    <%= f.label :text, "Details", class: "form-label" %>
    <%= f.text_area :text, class: "form-control", rows: 3, placeholder: "Provide details..." %>
  </div>

  <!-- Submit Button -->
  <div class="text-end">
    <%= f.submit "Submit", class: "btn btn-danger" %>
  </div>
<% end %>

      </div>
    </div>
  </div>
</div>
