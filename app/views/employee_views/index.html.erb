<div class="container mb-4 mt-4">
  <div class="card shadow-sm position-relative">
    <!-- Back Button -->
    <%= link_to root_path, class: 'btn btn-light rounded-circle shadow-sm d-flex align-items-center justify-content-center position-absolute', style: 'width: 40px; height: 40px; top: 10px; left: 10px;' do %>
      <span class="fs-6">&larr;</span>
    <% end %>

    <!-- Title and Description -->
    <div class="card-body text-center bg-light">
      <h1 class="fw-bold text-uppercase" style="letter-spacing: 1px; margin-bottom: 10px; margin-top: 10px;">Employee Insights</h1>
      <p class="text-muted" style="font-size: 14px;">Real feedback on interviews and networking from those whoâ€™ve been there</p>
    </div>
  </div>
</div>

<!-- Employee Views Table -->
<div class="container">
  <div class="card shadow-sm border-0 rounded">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th class="py-3 ps-4">Name</th>
              <th class="py-3 ps-4">Description</th>
              <th class="py-3 ps-4">Number of Employees</th>
              <th class="py-3"></th> <!-- Empty header for View button -->
            </tr>
          </thead>
          <tbody>
            <% @employee_views.each do |employee_view| %>
              <tr>
                <td class="ps-4">
                  <%= link_to employee_view.name, employee_view_path(employee_view), class: "fw-bold text-dark text-decoration-none" %>
                </td>
                <td class="text-muted ps-4"><%= employee_view.description %></td>
                <td class="ps-4">
                  <span class="badge bg-primary fs-6"><%= employee_view.employee_count %></span>
                </td>
                <td class="text-end pe-4">
                  <%= link_to "View", employee_view_path(employee_view), class: "btn btn-dark btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
