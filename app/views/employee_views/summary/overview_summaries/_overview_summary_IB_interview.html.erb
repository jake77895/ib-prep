<div class="container mb-4 mt-4">
  <!-- First Row: Overview -->
  <div class="row text-center g-4">
    <!-- Overall Impression -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Overall Impression</h5>
          <% total_responses = @impression_data.values.sum %>
          <% @impression_data.each do |label, count| %>
            <% if total_responses > 0 %>
              <% percentage = (count * 100 / total_responses).round(0) %>
            <% end %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="fw-bold"><%= label %></span>
              <span class="badge bg-primary"><%= percentage %>%</span>
            </div>
            <div class="progress mb-3" style="height: 15px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%;" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Total Recaps -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Total Recaps</h5>
          <p class="display-4 fw-bold text-success"><%= @total_recaps %></p>
        </div>
      </div>
    </div>

    <!-- Most Common Tones -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Overall Tone of Interview</h5>
          <% @most_common_tones.each do |tone, percentage| %>
            <p class="fw-bold text-muted"><%= tone %> (<%= percentage %>%)</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Second Row: Detailed Metrics -->
  <div class="row text-center g-4 mt-4">

    <!-- Received Job Offer -->
    <div class="col-md-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Received Job Offer</h5>
          <% total_offers = @offer_data.values.sum %>
          <% @offer_data.each do |label, count| %>
            <% percentage = (count * 100.0 / total_offers).round(0) %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="fw-bold"><%= label == "Offer Outcome Pending (at Submission Time)" ? "Outcome Pending" : label %></span>
              <span class="badge bg-primary"><%= percentage %>%</span>
            </div>
            <div class="progress mb-3" style="height: 15px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%;" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Technical Difficulty -->
    <div class="col-md-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Technical Difficulty</h5>
          <% total_difficulty = @technical_difficulty_data.values.sum %>
          <% @technical_difficulty_data.each do |label, count| %>
            <% percentage = (count * 100.0 / total_difficulty).round(0) %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="fw-bold"><%= label %></span>
              <span class="badge bg-primary"><%= percentage %>%</span>
            </div>
            <div class="progress mb-3" style="height: 15px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%;" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Asked About a Market Trend -->
    <div class="col-md-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Asked About a Market Trend</h5>
          <p class="display-4 fw-bold text-primary"><%= @asked_trend %>%</p>
        </div>
      </div>
    </div>

    <!-- Asked About a Deal -->
    <div class="col-md-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">Asked About a Deal</h5>
          <p class="display-4 fw-bold text-primary"><%= @asked_deal %>%</p>
        </div>
      </div>
    </div>
  </div>
</div>
