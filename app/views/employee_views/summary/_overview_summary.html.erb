<div class="container mb-4 mt-4">
  <div class="row text-center g-4">
    <!-- Percentage asked technical questions -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Asked Technical Questions</h5>
          <p class="display-4 fw-bold text-primary"><%= @asked_technical %>%</p>
        </div>
      </div>
    </div>

    <!-- Percentage asked about a deal -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Asked About a Deal</h5>
          <p class="display-4 fw-bold text-primary"><%= @asked_deal %>%</p>
        </div>
      </div>
    </div>

    <!-- Percentage asked about a market trend -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Asked About a Market Trend</h5>
          <p class="display-4 fw-bold text-primary"><%= @asked_trend %>%</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4 text-center g-4">
    <!-- Total number of recaps -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Total Recaps</h5>
          <p class="display-4 fw-bold text-success"><%= @total_recaps %></p>
        </div>
      </div>
    </div>

    <!-- Most common tones -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Most Common Tones</h5>
          <% @most_common_tones.each do |tone, percentage| %>
            <p class="fw-bold text-muted"><%= tone %> (<%= percentage %>%)</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Percentage passed to the next round -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Passed to Next Round</h5>
          <p class="display-4 fw-bold text-primary"><%= @passed_next_round %>%</p>
        </div>
      </div>
    </div>
  </div>
</div>
