<div class="container mb-4 mt-4">

<div class="row text-center g-4">
  <!-- Average Ratings for Networking -->
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Networking Rating</h5>
        <p class="display-4 fw-bold text-primary">4.5/5</p>
      </div>
    </div>
  </div>

  <!-- Average Ratings for Interview -->
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Interview Rating</h5>
        <p class="display-4 fw-bold text-success">4.7/5</p>
      </div>
    </div>
  </div>

  <!-- Most Common Tone -->
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Most Common Tone</h5>
        <p class="fw-bold text-muted">Casual and Friendly (70%)</p>
      </div>
    </div>
