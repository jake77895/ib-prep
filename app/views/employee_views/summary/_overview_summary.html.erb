        <p class="display-5 fw-bold">10 Users</p>
      </div>
    </div>
  </div>

  <!-- Comments Summary -->
  <div class="col-md-6">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Comment Summary</h5>
        <p class="fw-bold">Positive: "Helpful", "Professional"</p>
        <p class="fw-bold">Negative: "Rushed"</p>
      </div>
    </div>
  </div>
</div>
 
