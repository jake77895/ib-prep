

<div class="row g-4">
  <% @candidates.each do |candidate| %>
    <div class="col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <!-- Candidate Name -->
          <h5 class="card-title fw-bold mb-1"><%= candidate[:name] %></h5>

          <hr class="my-1">
          
          <!-- Organization -->
          <p class="mb-1">
            <strong>Organization:</strong> English
          </p>
          
          <!-- Recruiting For -->
          <p class="mb-1">
            <strong>Recruiting for:</strong> <%= candidate[:industry] %>
          </p>
          
          <!-- Interview Prep Level -->
          <p class="mb-1">
            <strong>Interview Prep Level:</strong> <%= candidate[:skills] %>
          </p>
          
          <!-- Language -->
          <p class="mb-1">
            <strong>Language:</strong> English
          </p>

          <hr class="my-2">
          
          <!-- Action Buttons -->
          <div class="d-flex justify-content-between">
            <a href="#" class="btn btn-dark flex-grow-1 me-2">Accept Invite</a>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</div>


