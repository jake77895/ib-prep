<!-- Filter and Options -->
<div class="row align-items-center mb-4">
  <!-- Date Navigation -->
  <div class="col-auto">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-outline-secondary">&larr;</button>
      <button type="button" class="btn btn-outline-secondary">Today</button>
      <button type="button" class="btn btn-outline-secondary">&rarr;</button>
    </div>
  </div>

  <!-- Time Range -->
  <div class="col-auto">
    <div class="d-flex align-items-center">
      <span class="text-muted me-2">12:00 AM</span>
      <div class="position-relative" style="width: 150px;">
        <input type="range" class="form-range" min="0" max="24" value="12" step="1" style="width: 100%;">
      </div>
      <span class="text-muted ms-2">11:45 PM</span>
    </div>
  </div>

  <!-- Filters -->
  <div class="col-auto">
    <select class="form-select">
      <option selected>Language</option>
      <option value="1">English</option>
      <option value="2">Spanish</option>
      <option value="3">French</option>
    </select>
  </div>
  <div class="col-auto">
    <select class="form-select">
      <option selected>Case Experience</option>
      <option value="1">Beginner</option>
      <option value="2">Intermediate</option>
      <option value="3">Advanced</option>
    </select>
  </div>

  <!-- Add Your Meeting And Availability Buttons -->
  <div class="col-auto ms-auto">
    <%= link_to "Your Meetings", mock_interviews_path, class: "btn btn-outline-dark" %>

    <!--Availability Button-->
    <% if user_signed_in? %>
      <% if false %> <!-- Placeholder conditional -->
        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addAvailabilityModal">Add Availability</button>
      <% else %>
         <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createProfileModal">Add Availability</button>
      <% end %>
    <% else %>
      <button class="btn btn-dark" data-bs-toggle="tooltip" title="You must sign in">Add Availability</button>
    <% end %>

  </div>
</div>

<!-- Render Add Availability Modal Partial -->
<%= render 'mock_interviews/add_availability_modal' %>
