<h1 class="text-center my-4">Admin: Manage Questions</h1>

<div class="container">
  <!-- New Question Button -->
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Question', new_admin_question_path, class: 'btn btn-dark' %>
  </div>

  <!-- Questions Table -->
  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">Questions List</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @questions.each do |question| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= truncate(question.question_text, length: 50) %></strong>
            <small class="text-muted d-block">Category: <%= question.category %></small>
          </div>
          <div class="d-flex align-items-center">
            <%= link_to 'Edit', edit_admin_question_path(question), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= link_to 'Delete', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
