<h1 class="text-center my-4">Admin: Manage Companies</h1>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Company', new_admin_company_path, class: 'btn btn-dark' %>
  </div>

  <div class="card shadow-sm border-0">
    <table class="table table-borderless mb-0">
      <thead class="bg-dark text-white">
        <tr>
          <th>Name</th>
          <th>Division</th>
          <th>Created At</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.position_type.name %></td>
            <td><%= company.created_at.strftime('%Y-%m-%d') %></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_admin_company_path(company), class: 'btn btn-outline-secondary btn-sm me-2' %>
              <%= link_to 'Delete', admin_company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
