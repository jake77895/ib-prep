<h2 class="text-center my-4">Edit Group</h2>

<div class="container">
  <%= form_with(model: @group, url: admin_group_path(@group), local: true, method: :patch) do |form| %>
    <div class="card shadow-sm border-0">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Update Group</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= form.label :name, 'Group Name', class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= form.label :company_id, 'Select Company', class: 'form-label' %>
          <%= form.collection_select :company_id, @companies, :id, :name, { prompt: 'Select Company' }, { class: 'form-select' } %>
        </div>
        <div class="mb-3">
          <%= form.label :location_id, 'Select Location', class: 'form-label' %>
          <%= form.collection_select :location_id, @locations, :id, :name, { prompt: 'Select Location' }, { class: 'form-select' } %>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <%= form.submit 'Update', class: 'btn btn-dark' %>
      </div>
    </div>
  <% end %>
</div>
