<h1 class="text-center my-4">Admin: Manage Groups</h1>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Group', new_admin_group_path, class: 'btn btn-dark' %>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">All Groups</h5>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Position Type</th>
          <th>Position Type Default</th>
          <th>Company</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <td><%= group.position_type&.name || '' %></td>
            <td><%= group.position_type_default.to_s.capitalize %></td>
            <td><%= group.company&.name || '' %></td>
            <td><%= group.location&.name || '' %></td>
            <td>
              <%= button_to 'Delete', admin_group_path(group), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure you want to delete this group?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
