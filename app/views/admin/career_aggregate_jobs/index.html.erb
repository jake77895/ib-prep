<h1 class="text-center my-4">Career Aggregate Jobs</h1>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Create New Job', new_admin_career_aggregate_job_path, class: 'btn btn-dark' %>
  </div>

  <div class="card shadow-sm border-0">
    <table class="table mb-0">
      <thead class="table-dark text-white">
        <tr>
          <th>ID</th>
          <th>Job Title</th>
          <th>Company</th>
          <th>Industry</th>
          <th>Average Salary</th>
          <th>Sample Size</th>
          <th class="text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @career_aggregate_jobs.each do |job| %>
          <tr>
            <td><%= job.id %></td>
            <td><%= job.job_title %></td>
            <td><%= job.company %></td>
            <td><%= job.industry %></td>
            <td>$<%= number_with_precision(job.average_salary, precision: 2) %></td>
            <td><%= job.sample_size %></td>
            <td class="text-left">
              <%= link_to 'Edit', edit_admin_career_aggregate_job_path(job), class: 'btn btn-outline-warning btn-sm me-2' %>
              <%= link_to 'Delete', admin_career_aggregate_job_path(job),
                          method: :delete,
                          data: { confirm: 'Are you sure you want to delete this job?' },
                          class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
