<h1 class="text-center my-4">Admin: Manage Question Packets</h1>

<div class="container">
  <!-- New Packet Button -->
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Question Packet', new_admin_question_packet_path, class: 'btn btn-dark' %>
  </div>

  <!-- Question Packets Table -->
  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">Question Packets</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @question_packets.each do |packet| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= packet.name %></strong>
          </div>
          <div class="d-flex align-items-center">
            <%= link_to 'Manage', manage_admin_question_packet_path(packet), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= link_to 'Edit', edit_admin_question_packet_path(packet), class: 'btn btn-outline-primary btn-sm me-2' %>
            <%= link_to 'Delete', admin_question_packet_path(packet), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
