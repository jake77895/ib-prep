<h2 class="text-center my-4"><%= @question_packet.new_record? ? 'New Question Packet' : 'Edit Question Packet' %></h2>

<div class="container">
  <%= form_with model: @question_packet, url: @question_packet.new_record? ? admin_question_packets_path : admin_question_packet_path(@question_packet), local: true do |form| %>
    <div class="card shadow-sm border-0">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><%= @question_packet.new_record? ? 'Create Question Packet' : 'Edit Question Packet' %></h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= form.label :name, 'Packet Name', class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter packet name', required: true %>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <%= form.submit class: 'btn btn-dark' %>
      </div>
    </div>
  <% end %>
</div>
