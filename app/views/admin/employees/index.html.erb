<h1 class="text-center my-4">Admin: Manage Employees</h1>

<div class="container">
  <!-- New Employee Button -->
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Employee', new_admin_employee_path, class: 'btn btn-dark' %>
  </div>

  <!-- Employee Table -->
  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">Employees List</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @employees.each do |employee| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= employee.name %></strong>
            <p class="mb-0 text-muted">
              Job Level: <%= employee.job_level&.name || 'N/A' %> |
              Company: <%= employee.company&.name || 'N/A' %> |
              Location: <%= employee.location&.name || 'N/A' %>
            </p>
          </div>
          <div class="d-flex align-items-center">
            <%= link_to 'Edit', edit_initial_admin_employee_path(employee), class: 'btn btn-outline-secondary btn-sm' %>
            <%= link_to 'Delete', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
