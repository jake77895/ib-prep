<h1 class="text-center my-4">
  <%= @forum_room.new_record? ? 'Create New Forum Room' : 'Edit Forum Room' %>
</h1>

<div class="container">
  <%= form_with(model: @forum_room, 
              url: @forum_room.new_record? ? admin_forum_rooms_path : admin_forum_room_path(@forum_room), 
              local: true) do |form| %>
    <div class="card shadow-sm border-0">
      <div class="card-header bg-dark text-white mt-4">
        <h2 class="mb-0"><%= @forum_room.new_record? ? 'Create New Forum Room' : 'Edit Forum Room' %></h2>
      </div>
      <div class="card-body">

        <!-- Room Name -->
        <div class="mb-3">
          <%= form.label :name, class: 'form-label fw-bold' %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter room name' %>
        </div>

        <!-- Room Description -->
        <div class="mb-3">
          <%= form.label :description, class: 'form-label fw-bold' %>
          <%= form.text_area :description, class: 'form-control', placeholder: 'Enter a description for the room', rows: 4 %>
        </div>

      </div>

      <div class="card-footer d-flex justify-content-between">
        <%= link_to 'Back', admin_forum_rooms_path, class: 'btn btn-outline-secondary px-4' %>
        <%= form.submit @forum_room.new_record? ? 'Create Room' : 'Update Room', class: 'btn btn-dark px-4' %>
      </div>
    </div>
  <% end %>
