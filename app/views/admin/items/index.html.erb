<h1 class="text-center my-4">Admin: Items</h1>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Item', new_admin_item_path, class: 'btn btn-dark' %>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">Items</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @items.each do |item| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= item.name %></strong>
            <% if item.picture.present? %>
              <%= image_tag item.picture.url(:thumb), class: 'img-thumbnail ms-2', style: 'width: 50px; height: 50px; object-fit: cover;' %>
            <% end %>
          </div>
          <div>
            <%= link_to 'Edit', edit_admin_item_path(item), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= link_to 'Delete', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
