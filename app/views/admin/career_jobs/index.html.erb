<h1 class="text-center my-4">Career Jobs</h1>

<div class="container">
  <!-- Create New Job Button -->
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Create New Job', step_one_admin_career_jobs_path, class: 'btn btn-dark' %>
  </div>

  <!-- Career Jobs Table -->
  <div class="card shadow-sm border-0">
    <table class="table mb-0">
      <thead class="table-dark text-white">
        <tr>
          <th>ID</th>
          <th>Company</th>
          <th>Location</th>
          <th>Group</th>
          <th>Salary</th>
          <th>Bonus</th>
          <th>Level</th>
          <th class="text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @career_jobs.each do |job| %>
          <tr>
            <td><%= job.id %></td>
            <td><%= job.company %></td>
            <td><%= job.location %></td>
            
            <!-- Show Group, Salary, Bonus, and Level (from CareerCompensations) -->
            <td>
              <%= job.career_compensations.first&.group || 'N/A' %>
            </td>
            <td>
              <%= number_to_currency(job.career_compensations.first&.salary) || 'N/A' %>
            </td>
            <td>
              <%= number_to_currency(job.career_compensations.first&.bonus) || 'N/A' %>
            </td>
            <td>
              <%= job.career_compensations.first&.level || 'N/A' %>
            </td>

            <!-- Actions -->
            <td class="text-left">
              <%= link_to 'Delete', admin_career_job_path(job), 
                          method: :delete, 
                          data: { confirm: 'Are you sure you want to delete this job?' }, 
                          class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
