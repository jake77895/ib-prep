<h1 class="text-center my-4">
  <%= @career_job.new_record? ? 'Create New Career Job' : 'Edit Career Job' %>
</h1>

<div class="container">
  <%= form_with(model: @career_job, url: @career_job.persisted? ? admin_career_job_path(@career_job) : admin_career_jobs_path, local: true) do |form| %>
    <div class="card shadow-sm border-0">
      
      <!-- Header -->
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><%= @career_job.new_record? ? 'Create New Career Job' : 'Edit Career Job' %></h5>
      </div>
      
      <!-- Body -->
      <div class="card-body">
        <!-- Company Name -->
        <div class="mb-3">
          <%= form.label :company, 'Company Name', class: 'form-label fw-bold' %>
          <%= form.select :company, options_from_collection_for_select(@companies, :name, :name, @career_job.company), 
              { include_blank: 'Select a company' }, class: 'form-control' %>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <%= form.label :location, 'Location', class: 'form-label fw-bold' %>
          <%= form.select :location, options_from_collection_for_select(@locations, :name, :name, @career_job.location), 
              { include_blank: 'Select a location' }, class: 'form-control' %>
        </div>

        <!-- Industry -->
        <div class="mb-3">
          <%= form.label :industry, 'Industry', class: 'form-label fw-bold' %>
          <%= form.select :industry, options_for_select(@industries, @career_job.industry), 
              { include_blank: 'Select an industry' }, class: 'form-control' %>
        </div>

        <!-- Group -->
        <div class="mb-3">
          <%= form.label :group, 'Group', class: 'form-label fw-bold' %>
          <%= form.select :group, options_from_collection_for_select(@groups, :name, :name, @career_job.group), 
              { include_blank: 'Select a group' }, class: 'form-control' %>
        </div>

        <!-- Start Year -->
        <div class="mb-3">
          <%= form.label :start_year, 'Start Year', class: 'form-label fw-bold' %>
          <%= form.number_field :start_year, min: 1900, max: Time.current.year, class: 'form-control' %>
        </div>

        <!-- Years at Job -->
        <div class="mb-3">
          <%= form.label :years_at_job, 'Years at Job', class: 'form-label fw-bold' %>
          <%= form.number_field :years_at_job, min: 0, class: 'form-control', placeholder: 'Enter years at job' %>
        </div>

        <!-- Previous Job ID -->
        <div class="mb-3">
          <%= form.label :previous_job_id, 'Previous Job ID', class: 'form-label fw-bold' %>
          <%= form.number_field :previous_job_id, class: 'form-control', placeholder: 'Enter previous job ID' %>
        </div>

        <!-- Next Job ID -->
        <div class="mb-3">
          <%= form.label :next_job_id, 'Next Job ID', class: 'form-label fw-bold' %>
          <%= form.number_field :next_job_id, class: 'form-control', placeholder: 'Enter next job ID' %>
        </div>
      </div>
      
      <!-- Footer -->
      <div class="card-footer d-flex justify-content-between">
        <%= link_to 'Back', admin_career_jobs_path, class: 'btn btn-outline-secondary px-4' %>
        <%= form.submit @career_job.persisted? ? 'Update Career Job' : 'Create Career Job', class: 'btn btn-dark px-4' %>
      </div>
    </div>
  <% end %>
</div>
